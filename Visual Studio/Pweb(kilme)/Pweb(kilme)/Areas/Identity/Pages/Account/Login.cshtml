@page
@model LoginModel


<h1>@ViewData["Title"]</h1>
<div class="container-fluid d-flex justify-content-center align-items-center" id="contenedor-login">
    <div class="container d-flex justify-content-center align-items-center login-container" id="div-god">
        <div class="card p-4 shadow" id="tarjeta">
            <h3 id="letterstyle" class="text-center mb-3">Inicio de sesión</h3>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Correo electronico</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Introduce tu correo electronico" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Introduce tu contraseña" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <button id="login-submit" type="submit" class="btn btn-outline-light w-100" id="letterstyle">Iniciar Sesión</button>
            </form>
            <p id="letterstyle">¿No tienes cuenta?</p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                <button type="button" class="btn btn-outline-dark" id="letterstyle">Registrate Aqui !!!</button>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
