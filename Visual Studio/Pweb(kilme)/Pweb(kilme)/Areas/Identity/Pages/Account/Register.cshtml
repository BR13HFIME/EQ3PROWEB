@page
@model RegisterModel


<h1>@ViewData["Title"]</h1>

<div class="container-fluid d-flex justify-content-center align-items-center" id="contenedor-registro">
    <div class="container d-flex justify-content-center align-items-center login-container" id="div-god">
        <div class="card p-4 shadow m-4" id="tarjeta">
            <h3 id="letterstyle" class="text-center mb-3">Registro</h3>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="Input.Nombre" class="form-label">Nombre</label>
                    <input asp-for="Input.Nombre" class="form-control" placeholder="Introduce tu nombre" />
                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.NumTel" class="form-label">Telefono</label>
                    <input asp-for="Input.NumTel" class="form-control" placeholder="Introduce tu Telefono" />
                    <span asp-validation-for="Input.NumTel" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Introduce tu correo electrónico" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Introduce tu contraseña" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar contraseña</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirma tu contraseña" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="btn btn-dark w-100">Registrarse</button>
            </form>
            <p class="mt-3 text-center" id="letterstyle">
                ¿Ya tienes una cuenta?
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">
                    <button type="button" class="btn btn-outline-dark" id="letterstyle">Inicia sesión aquí</button>
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
